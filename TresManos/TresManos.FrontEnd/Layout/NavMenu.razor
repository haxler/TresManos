<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Tres Manos</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <!-- Inicio -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill me-2" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>

        <!-- Counter -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill me-2" aria-hidden="true"></span> Counter
            </NavLink>
        </div>

        <!-- Weather -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-cloud-sun-fill me-2" aria-hidden="true"></span> Weather
            </NavLink>
        </div>

        <hr class="my-2" style="border-color: rgba(255,255,255,0.2);" />

        <!-- Registrar Jugadores -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="registro-jugadores">
                <span class="bi bi-person-plus-fill me-2" aria-hidden="true"></span> Registrar Jugadores
            </NavLink>
        </div>

        <!-- Ronda -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ronda">
                <span class="bi bi-controller me-2" aria-hidden="true"></span> Ronda
            </NavLink>
        </div>

        <!-- Ganador -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ganador">
                <span class="bi bi-trophy-fill me-2" aria-hidden="true"></span> Ganador
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}